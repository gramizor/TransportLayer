{
    "openapi": "3.0.3",
    "info": {
      "title": "Transport level API",
      "description": "Свагер для транспортного уровня",
      "version": "1.0"
    },
    "servers": [
      {
        "url": "https://localhost:8000"
      }
    ],
    "basePath": "/",
    "tags": [
      {
        "name": "Transport"
      }
    ],
    "paths": {
      "/send-message": {
        "post": {
          "tags": [
            "Transport"
          ],
          "summary": "Отправка сообщения сегментами на канальный уровень",
          "description": "Отправка сообщения сегментами на канальный уровень",
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "id",
              "in": "query",
              "description": "ID сообщения",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "segments",
              "in": "query",
              "description": "Сегменты сообщения",
              "required": true,
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "messageId": {
                      "type": "string"
                    },
                    "totalLength": {
                      "type": "integer"
                    },
                    "segmentIndex": {
                      "type": "integer"
                    },
                    "payload": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Успешная отправка",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            },
            "400": {
              "description": "Некорректный запрос",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            },
            "500": {
              "description": "Внутренняя ошибка сервера",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "/transfer": {
        "post": {
          "tags": [
            "Transport"
          ],
          "summary": "Передача собранных сообщений на прикладной уровень",
          "description": "Передача собранных сообщений на прикладной уровень",
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "id",
              "in": "query",
              "description": "ID сообщения",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "segments",
              "in": "query",
              "description": "Сегменты сообщения",
              "required": true,
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "messageId": {
                      "type": "string"
                    },
                    "totalLength": {
                      "type": "integer"
                    },
                    "segmentIndex": {
                      "type": "integer"
                    },
                    "payload": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Успешная передача",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            },
            "400": {
              "description": "Некорректный запрос",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            },
            "500": {
              "description": "Внутренняя ошибка сервера",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
}
